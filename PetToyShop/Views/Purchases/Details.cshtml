@model PetToyShop.Models.Purchase

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Purchase</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @{
                var fullName = Model.User.FirstName + " " + Model.User.LastName;
                @Html.DisplayFor(model => fullName)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankAccount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankAccount.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToyItems)
        </dt>
        <dd class="col-sm-10">
            @string.Join(" , ", Model.ToyItems.Select(t=>t.Name).ToList())
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeOfPurchase)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeOfPurchase)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-light btn-sm">Back to List</a>
</div>
